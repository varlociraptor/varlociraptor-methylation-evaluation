# Main entrypoint of the workflow.
# Please follow the best practices:
# https://snakemake.readthedocs.io/en/stable/snakefiles/best_practices.html,
# in particular regarding the standardized folder structure mentioned there.


configfile: "config/config.yaml"

scattergather:
    split_candidates=1,

read_type = config["read_type"]
genome_config = config["sample"]




aligned_bam_reads = (
    "resources/example_paired/aligned-reads-pacbio.bam"
    if read_type == "PacBio"
    else "resources/example_paired/aligned-reads-illumina.bam"
)

aligned_bam_reads_index = (
    "resources/example_paired/aligned-reads-pacbio-sorted.bam.bai"
    if read_type == "PacBio"
    else "resources/example_paired/aligned-reads-illumina-sorted.bam.bai"
)

aligned_sam_reads = (
    "resources/example_paired/aligned-reads-pacbio.sam"
    if read_type == "PacBio"
    else "resources/example_paired/aligned-reads-illumina.sam"
)

aligned_bam_reads_sorted = (
    "resources/example_paired/aligned-reads-pacbio-sorted.bam"
    if read_type == "PacBio"
    else "resources/example_paired/aligned-reads-illumina-sorted.bam"
)

aligned_sam_reads_sorted = (
    "resources/example_paired/aligned-reads-pacbio-sorted.sam"
    if read_type == "PacBio"
    else "resources/example_paired/aligned-reads-illumina-sorted.sam"
)


rule all:
    input:
        dv="results/scatter_plot_dv.png",
        tv="results/scatter_plot_tv.png",
        td="results/scatter_plot_td.png"



rule genome_index:
    input:
        "resources/example_paired/genome.fasta",
    output:
        "resources/example_paired/genome.fasta.fai",
    log:
        "logs/genome_index.log",
    conda:
        "envs/samtools.yaml"
    params:
        pipeline_path=config["pipeline_path"],
    shell:
        """ 
        samtools faidx {params.pipeline_path}{input}
        """

# Just for debugging reasons
rule get_candidate_neighborhood:
    input:
        genome="resources/chromosome.fasta"
    output:
        "resources/candidate_neighborhood.txt"
    params:
        pipeline_path=config["pipeline_path"],
        candidate=25914260
    script:
        "scripts/candidate_neighborhood.py"



rule find_candidates:
    input:
        "resources/example_paired/genome.fasta",
    output:
        "resources/example_paired/candidates.bcf",
    log:
        "logs/find_candidates.log",
    conda:
        "envs/varlociraptor.yaml"
    params:
        varlo_path=config["varlo_path"],
        pipeline_path=config["pipeline_path"],
    shell:
        """ 
        cd {params.varlo_path}
        cargo run -- methylation-candidates {params.pipeline_path}{input} {params.pipeline_path}{output}
        """

# Unused
rule candidates_to_vcf:
    input:
        "resources/example_paired/candidates.bcf",
    output:
        "resources/example_paired/candidates.vcf",
    conda:
        "envs/samtools.yaml"
    log:
        "logs/convert_to_vcf.log",
    shell:
        """
        bcftools view {input} > {output}
        """
        
rule split_candidates:
    input:
        "resources/example_paired/candidates.bcf",
    output:
        temp(scatter.split_candidates("resources/example_paired/candidates_{scatteritem}.bcf"))
    log:
        "logs/split_candidates.log",
    conda:
        "envs/rbt.yaml"
    shell:
        "rbt vcf-split {input} {output}"

rule splitted_candidates_to_vcf:
    input:
        "resources/example_paired/candidates_{scatteritem}.bcf",
    output:
        "resources/example_paired/candidates_{scatteritem}.vcf",
    conda:
        "envs/samtools.yaml"
    log:
        "logs/convert_splitted_to_vcf_{scatteritem}.log",
    shell:
        """
        bcftools view {input} > {output}
        """


rule fake_meth_data_methylFASTQ:
    input:
        fasta="resources/example_paired/genome.fasta",
    output:
        "resources/example_paired/genome_pe_f150r150_dir_R1.fastq",
        "resources/example_paired/genome_pe_f150r150_dir_R2.fastq",
        "resources/example_paired/genome_pe_f150r150_dir.ch3"
    log:
        "logs/fake_meth_data.log",
    params:
        pipeline_path=config["pipeline_path"],
        methylFastQ_path=config["methylFastQ_path"],
    conda:
        "envs/methylFastQ.yaml"
    shell:
        """
        python {params.methylFastQ_path}src/methylFASTQ.py -i {input} -o {params.pipeline_path}resources/example_paired --seq paired_end --chh 0.0 --chg 0.0 --cg 0.5 --snp 0.0 --error 0.0 --coverage 4 
        """



rule align_reads:
    input:
        fasta="resources/example_paired/genome.fasta",
        reads1="resources/example_paired/genome_pe_f150r150_dir_R1.fastq",
        reads2="resources/example_paired/genome_pe_f150r150_dir_R2.fastq",
    output:
        aligned_bam_reads
    conda:
        "envs/bwa-meth.yaml"
    log:
        # "logs/align_reads_{scatteritem}.log",
        "logs/align_reads.log",
    shell:
        """
        bwameth.py index-mem2 {input.fasta}
        bwameth.py --threads 10 --reference {input.fasta} {input.reads1} {input.reads2}  | samtools view -S -b - > {output}
        """




# Unused
rule aligned_reads_sorted_sam:
    input:
        aligned_bam_reads,
    output:
        sam_reads=aligned_sam_reads,
        sam_sorted=aligned_sam_reads_sorted,
    log:
        "logs/aligned_reads_sorted_sam.log",
    conda:
        "envs/samtools.yaml"
    params:
        pipeline_path=config["pipeline_path"],
    shell:
        """ 
        samtools view -bS {params.pipeline_path}{input} > {params.pipeline_path}/{output.sam_reads}    
        samtools sort {output.sam_reads} -o {output.sam_sorted}    
        """

rule sort_aligned_reads:
    input:
        # aligned_sam_reads_sorted
        aligned_bam_reads,
    output:
        aligned_bam_reads_sorted,
    log:
        "logs/sort_aligned_reads.log",
    conda:
        "envs/samtools.yaml"
    params:
        pipeline_path=config["pipeline_path"],
    shell:
        """

        samtools sort {input} -o {output}    
        """
        # samtools view -bS {params.pipeline_path}{input} > {params.pipeline_path}/{output}    

rule aligned_reads_index:
    input:
        aligned_bam_reads_sorted,
    output:
        aligned_bam_reads_index,
    log:
        "logs/aligned_reads_to_bam.log",
    conda:
        "envs/samtools.yaml"
    params:
        pipeline_path=config["pipeline_path"],
    shell:
        """
        samtools index {params.pipeline_path}/{input}
        """

rule methylDackel:
    input:
        genome="resources/example_paired/genome.fasta",
        alignments=aligned_bam_reads_sorted,
        alignment_index=aligned_bam_reads_index
    output:
        "results/alignments_CpG.bedGraph",
    conda:
        "envs/methylDackel.yaml"
    log:
        "logs/methylDackel.log",
    params:
        pipeline_path=config["pipeline_path"],
    shell:
        """
        MethylDackel extract {input.genome} {input.alignments} -o {params.pipeline_path}/results/alignments --mergeContext
        """


rule compute_meth_observations:
    input:
        genome="resources/example_paired/genome.fasta",
        genome_index="resources/example_paired/genome.fasta.fai",
        alignments=aligned_bam_reads_sorted,
        alignments_index=aligned_bam_reads_index,
        candidates="resources/example_paired/candidates_{scatteritem}.bcf"
        # candidates="resources/example_paired/candidates.bcf",
    output:
        temp("results/normal_{scatteritem}.bcf"),
        # "results/normal.bcf",
    log:
        "logs/compute_{scatteritem}.log",
    conda:
        "envs/varlociraptor.yaml"
    params:
        varlo_path=config["varlo_path"],
        pipeline_path=config["pipeline_path"],
        read_type=config["read_type"],
    shell:
        """ 
        cd {params.varlo_path}
        cargo run  --release -- preprocess variants {params.pipeline_path}{input.genome} --candidates {params.pipeline_path}{input.candidates} --bam {params.pipeline_path}{input.alignments} --read-type {params.read_type} > {params.pipeline_path}{output}
        """

# Unused
rule observations_to_vcf:
    input:
        "results/normal_{scatteritem}.bcf",
        # "results/normal.bcf",
    output:
        temp("results/normal_{scatteritem}.vcf"),
        # "results/normal.vcf",
    conda:
        "envs/samtools.yaml"
    log:
        "logs/convert_to_vcf_{scatteritem}.log",
    shell:
        """
        bcftools view {input} > {output}
        """

rule call_methylation:
    input:
        preprocess_obs="results/normal_{scatteritem}.bcf",
        # preprocess_obs="results/normal.bcf",
        scenario="resources/example_paired/scenario.yaml",
    output:
        temp("results/calls_{scatteritem}.bcf"),
        # "results/calls.bcf",
    log:
        "logs/compute_{scatteritem}.log",
    conda:
        "envs/varlociraptor.yaml"
    params:
        varlo_path=config["varlo_path"],
        pipeline_path=config["pipeline_path"],
        read_type=config["read_type"],
    shell:
        """ 
        cd {params.varlo_path}
        cargo run --release -- call variants --omit-strand-bias generic --scenario {params.pipeline_path}{input.scenario} --obs normal={params.pipeline_path}{input.preprocess_obs} > {params.pipeline_path}/{output}
        """


rule calls_to_vcf:
    input:
        "results/calls_{scatteritem}.bcf",
        # "results/calls.bcf",
    output:
        temp("results/calls_{scatteritem}.vcf"),
        # "results/calls.vcf",
    conda:
        "envs/samtools.yaml"
    log:
        "logs/convert_to_vcf_{scatteritem}.log",
    shell:
        """
        bcftools view {input} -o {output}
        """
        
rule gather_candidates:
    input:
        gather.split_candidates("results/calls_{scatteritem}.vcf")
    output:
        "results/calls.vcf"
    shell:
        "cat {input} > {output}"

rule plot_results:
    input:
        bedGraph="results/alignments_CpG.bedGraph",
        calls="results/calls.vcf",
        # true_meth="resources/example_paired/genome_se_f150r150_dir.ch3"
        true_meth="resources/example_paired/genome_pe_f150r150_dir.ch3"
    output:
        dv="results/scatter_plot_dv.png",
        tv="results/scatter_plot_tv.png",
        td="results/scatter_plot_td.png"
    conda:
        "envs/plot.yaml"
    script:
        "scripts/scatter_plot_fake.py"
